FROM python:3.11-slim
WORKDIR /app
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt && apt-get update && apt-get install -y glpk-utils && rm -rf /var/lib/apt/lists/*
COPY pyproject.toml ./
COPY src ./src
COPY api ./api
ENV PYTHONPATH=/app/src
EXPOSE 8081
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8081"]
